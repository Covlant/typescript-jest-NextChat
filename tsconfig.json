{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,

    // âœ… Ensure compatibility with CommonJS in tests
    "module": "CommonJS",

    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,

    // ðŸ”„ Needed for Next.js but should be false for ts-jest compatibility
    "isolatedModules": false,

    "jsx": "preserve",
    "incremental": true,

    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "jest.config.ts"],
  "exclude": ["node_modules"]
}
